{
  "name": "send-tweet",
  "description": "Super simple Tweet-sending CLI tool in Node.",
  "version": "3.0.8",
  "author": {
    "email": "zac@zacanger.com",
    "name": "Zac Anger",
    "url": "http://zacanger.com"
  },
  "funding": {
    "type": "ko-fi",
    "url": "https://ko-fi.com/zacanger"
  },
  "license": "LGPL-3.0",
  "main": "index.js",
  "files": [
    "index.js",
    "lib"
  ],
  "preferGlobal": true,
  "bin": "./index.js",
  "scripts": {
    "build": "tsc",
    "prebuild": "npm t",
    "preversion": "npm run build",
    "test": "run-s -s test:ts test:lint",
    "test:lint": "eslint -c .eslintrc.json src",
    "test:ts": "tsc --noEmit"
  },
  "homepage": "https://github.com/zacanger/send-tweet#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zacanger/send-tweet.git"
  },
  "bugs": "https://github.com/zacanger/send-tweet/issues",
  "keywords": [
    "cli",
    "client",
    "send-tweet",
    "tweet",
    "twitter"
  ],
  "dependencies": {
    "twitter": "1.7.1"
  },
  "devDependencies": {
    "@types/node": "14.11.2",
    "@types/twitter": "1.7.0",
    "eslint": "7.9.0",
    "eslint-plugin-zacanger": "2.1.3",
    "husky": "4.3.0",
    "lint-staged": "10.4.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "sortpack": "2.1.9",
    "ts-node": "9.0.0",
    "typescript": "4.0.3"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ],
    "package.json": [
      "sortpack"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
